import time
from fast_sdk.infra_red import InfraredSensors

ir = InfraredSensors()

print("Reading line sensors for 10 seconds...")
print("Tip: move the robot over the line and watch the pattern change.")
start = time.time()

while time.time() - start < 10:
    v = ir.read_sensor_data()
    # v is usually a list like [L2, L1, C, R1, R2] or similar
    # We'll just print whatever we get.
    # Also compute a crude "error" if it's 5 sensors.
    msg = f"IR: {v}"
    if isinstance(v, (list, tuple)) and len(v) == 5:
        # Map sensors to positions left..right
        pos = [-2, -1, 0, 1, 2]
        # Many line sensors return 0/1. We don’t assume which means "on line".
        # We'll treat "1" as active; if it's inverted, we'll flip later in 03b.
        active = [1 if int(x) else 0 for x in v]
        s = sum(active)
        if s > 0:
            err = sum(p*a for p,a in zip(pos, active)) / s
            msg += f"  -> err≈{err:+.2f}"
        else:
            msg += "  -> err=none"
    print(msg)
    time.sleep(0.12)

print("Done.")
